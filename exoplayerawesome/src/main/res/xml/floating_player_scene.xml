<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
            motion:constraintSetEnd="@id/end"
            motion:constraintSetStart="@id/start"
            motion:duration="50"
            motion:motionInterpolator="linear">

        <OnSwipe
                motion:dragDirection="dragDown"
                motion:onTouchUp="autoComplete"
                motion:maxAcceleration="20"
                motion:touchRegionId="@id/motionInteractView" />
        <KeyFrameSet>

            <!--            <KeyAttribute-->
            <!--                    android:alpha="0"-->
            <!--                    motion:curveFit="linear"-->
            <!--                    motion:framePosition="99"-->
            <!--                    motion:motionTarget="@id/detailsBg" />-->
            <!--            <KeyAttribute-->
            <!--                    android:alpha="0"-->
            <!--                    motion:curveFit="linear"-->
            <!--                    motion:framePosition="90"-->
            <!--                    motion:motionTarget="@id/detailsView" />-->
            <KeyAttribute
                    android:alpha="0"
                    motion:framePosition="75"
                    motion:motionTarget="@id/detailsView_container" />
            <KeyPosition
                    motion:curveFit="linear"
                    motion:framePosition="80"
                    motion:keyPositionType="parentRelative"
                    motion:motionTarget="@+id/motionInteractView"
                    motion:percentHeight="0"
                    motion:percentWidth="0"
                    motion:percentX="0" />

        </KeyFrameSet>


    </Transition>
    <Transition
            motion:constraintSetEnd="@id/finish_left"
            motion:constraintSetStart="@id/end"
            motion:duration="50"
            motion:motionInterpolator="linear">

        <OnSwipe
                motion:dragDirection="dragLeft"
                motion:maxAcceleration="20"
                motion:onTouchUp="autoComplete"
                motion:touchRegionId="@id/motionInteractView" />
        <KeyFrameSet>

            <KeyAttribute
                    android:alpha="0"
                    motion:framePosition="0"
                    motion:motionTarget="@id/close_view" />

            <KeyAttribute
                    android:alpha="1"
                    motion:framePosition="100"
                    motion:motionTarget="@id/close_view" />
            <!--            <KeyPosition-->
            <!--                    motion:curveFit="spline"-->
            <!--                    motion:framePosition="50"-->
            <!--                    motion:motionTarget="@id/motionInteractView"-->
            <!--                    motion:percentWidth="0" />-->


            <!--            <KeyPosition-->
            <!--                    motion:curveFit="spline"-->
            <!--                    motion:framePosition="50"-->
            <!--                    motion:motionTarget="@id/detailsView"-->
            <!--                    motion:percentWidth="0" />-->


        </KeyFrameSet>
    </Transition>
    <ConstraintSet android:id="@+id/start">

        <Constraint
                android:id="@id/motionInteractView"
                android:layout_width="0dp"
                android:layout_height="200dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintVertical_bias="0.0"
                motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>


    <ConstraintSet
            android:id="@+id/finish_left"
            motion:deriveConstraintsFrom="@+id/end">

        <Constraint
                android:id="@id/motionInteractView"
                android:layout_width="119dp"
                android:layout_height="70dp"
                motion:layout_constraintBottom_toTopOf="@id/bottom_nav_spacer"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintHorizontal_bias="0.0"
                motion:layout_constraintStart_toStartOf="parent" />


    </ConstraintSet>
    <ConstraintSet android:id="@+id/fullScreen">

        <Constraint
                android:id="@id/motionInteractView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:elevation="0dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">
        <Constraint
                android:id="@id/motionInteractView"
                android:layout_width="119dp"
                android:layout_height="70dp"
                motion:layout_constraintBottom_toTopOf="@id/bottom_nav_spacer"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintHorizontal_bias="1.0" />
        <Constraint
                android:id="@+id/detailsView_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/motionInteractView" />


    </ConstraintSet>

</MotionScene>